{
    "containerDefinitions": [
        {
            "name": "masc",
            "image": "lappsgrid/masc",
            "cpu": 128,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8001,
                    "protocol": "tcp"
                }
            ],
            "command": [
                "/usr/bin/startup"
            ]
        },
        {
            "name": "oaqa",
            "image": "lappsgrid/oaqa",
            "cpu": 128,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8002,
                    "protocol": "tcp"
                }
            ],
            "command": [
                "/usr/bin/startup"
            ]
        },
        {
            "name": "lingpipe",
            "image": "lappsgrid/lingpipe",
            "cpu": 128,
            "memory": 1024,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8003,
                    "protocol": "tcp"
                }
            ],
            "command": [
                "/usr/bin/startup"
            ]
        },
        {
            "name": "stanford",
            "image": "lappsgrid/stanford",
            "cpu": 128,
            "memory": 1024,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8004,
                    "protocol": "tcp"
                }
            ],
            "command": [
                "/usr/bin/startup"
            ]
        },
        {
            "name": "galaxy",
            "image": "lappsgrid/galaxy-keith",
            "cpu": 256,
            "memory": 4096,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "command": [
                "/usr/bin/startup"
            ],
            "links": [
                "masc",
                "oaqa",
                "lingpipe",
                "stanford",
                "galaxy"
            ],
            "privileged": true,
            "mountPoints": [
                {
                    "sourceVolume": "galaxy_storage",
                    "containerPath": "/export",
                    "readOnly": ""
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "galaxy_storage",
            "host": {
                "sourcePath": "/usr/local/galaxy"
            }
        }
    ],
    "family": "lappsgrid-deiis-cluster"
}