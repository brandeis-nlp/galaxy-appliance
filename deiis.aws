/*
 * The Lappsgrid DEIIS appliance definition.
 *
 */

containers = [ 'masc', 'oaqa', 'lingpipe', 'stanford' ]
galaxy_image = 'lappsgrid/galaxy-keith'
cluster = 'lappsgrid-deiis-cluster'
ports = [
	galaxy: [from:80, to:80]
]
cpu = [
	default: 128,
	galaxy: 256
]
memory = [
	default: 512,
	lingpipe: 1024,
	stanford: 1024,
	galaxy: 4096
]

include 'base_appliance.aws'
